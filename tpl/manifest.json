{
  "manifest_version": 2,
  "name": "Neopets Shop Highlighter",
  "description": "Highlights items in Neopets shops that appear on page refresh",
  "version": "__VERSION__",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.neopets.com/*"],
      "js": ["active-tab.js"]
    }
  ],

  "background": {
    "scripts": ["migrate.js"],
    "persistent": false
  },

  "options_page": "settings.html",
  "icons": {
    "16": "res/icon-16.png",
    "48": "res/icon-48.png",
    "128": "res/icon-128.png",
    "256": "res/icon-256.png"
  }
}