{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "sourceMap": true,
    "removeComments": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictBindCallApply": true,
    "pretty": true,
    "strict": true,
    "rootDir": "src",
    "types": [
      "lodash",
      "node",
      "chrome",
      "svelte",
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}