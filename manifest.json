{
  "manifest_version": 2,
  "name": "Neopets Shop Highlighter",
  "description": "Highlights items in Neopets shops that appear on page refresh",
  "version": "1.0.0",

  "author": {
    "name": "Elizabeth Harper",
    "url": "https://github.com/Foxcapades"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.neopets.com/*"],
      "js": ["app.js"]
    }
  ],

  "icons": {
    "16": "res/icon-16.png",
    "48": "res/icon-48.png",
    "128": "res/icon-128.png",
    "256": "res/icon-256.png"
  }
}